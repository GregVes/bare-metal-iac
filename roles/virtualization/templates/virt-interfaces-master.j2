auto lo {{ master_main_net_interface }}
iface lo inet loopback
allow-hotplug {{ master_main_net_interface }}

iface {{ master_main_net_interface }} inet static
    address {{ master_ip }}
    netmask {{ master_netmask }}
    broadcast {{ master_ip }}
    gateway {{ master_gateway_ip }}
    post-up ip route add {{ master_gateway_ip }} dev {{ master_main_net_interface }}
    post-up ip route add default via {{ master_gateway_ip }}
    pre-down ip route del {{ master_gateway_ip }} dev {{ master_main_net_interface }}
    pre-down ip route del default via {{ master_gateway_ip }}